<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.framgia.model">
  <class name="Product" table="products">
    <id name="id" column="id">
      <generator class="increment" />
    </id>

    <property name="isPromotion" type="boolean">
      <column name="is_promotion" default="false" />
    </property>
    <property name="promotionId" column="promotion_id" type="integer" />
    <property name="saleOff" type="float">
      <column name="sale_off" default="0" />
    </property>
    <property name="name" column="name" type="string" />
    <property name="avatar" column="avatar" type="string" />
    <property name="information" column="information" type="string" />
    <property name="price" type="float">
      <column name="price" default="0" />
    </property>
    <property name="rating" type="float">
      <column name="rating" default="0" />
    </property>
    <property name="number" type="integer">
      <column name="number" default="0" check="number >= 0" />
    </property>
    <property name="createdAt" column="created_at" type="date" />

    <many-to-one name="category" class="Category">
      <column name="category_id" not-null="true" />
    </many-to-one>
    <one-to-one name="recent" class="Recent" cascade="save-update, delete" />

    <list name="images" fetch="select" cascade="delete" inverse="true">
      <key column="product_id" />
      <index column="id" />
      <one-to-many class="Image" />
    </list>
    <list name="orderProducts" fetch="select" cascade="delete"
      inverse="true">
      <key column="product_id" />
      <index column="id" />
      <one-to-many class="OrderProduct" />
    </list>
  </class>
</hibernate-mapping>
