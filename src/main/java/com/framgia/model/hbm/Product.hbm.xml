<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.framgia.model">
  <class name="Product" table="products">
    <id name="id" column="id">
      <generator class="increment" />
    </id>

    <property name="isPromotion" column="is_promotion" type="boolean" />
    <property name="promotionId" column="promotion_id" type="integer" />
    <property name="saleOf" column="sale_of" type="float" />
    <property name="name" column="name" type="string" />
    <property name="avatar" column="avatar" type="string" />
    <property name="information" column="information" type="string" />
    <property name="price" column="price" type="float" />
    <property name="rating" column="rating" type="float" />
    <property name="number" column="number" type="integer" />

    <many-to-one name="category" column="category_id"
      not-null="true" />
    <many-to-one name="promotion" column="promotion_id" />

    <set name="images">
      <key column="product_id" />
      <one-to-many class="Image" />
    </set>
  </class>
</hibernate-mapping>
