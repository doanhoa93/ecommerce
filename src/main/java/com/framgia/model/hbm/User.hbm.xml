<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.framgia.model">
  <class name="User" table="users">
    <id name="id" column="id">
      <generator class="increment" />
    </id>

    <property name="email" column="email" type="string"
      not-null="true" unique="true" />
    <property name="password" column="password" type="string"
      not-null="true" />
    <property name="name" column="name" type="string" not-null="true" />
    <property name="avatar" column="avatar" type="string" />
    <property name="role" column="role" type="string" not-null="true" />
    
    <one-to-one name="profile" class="Profile" cascade="save-update, delete-orphan" />

    <bag name="orders" batch-size="100" cascade="delete-orphan"
      inverse="true">
      <key column="user_id" />
      <one-to-many class="Order" />
    </bag>
    <bag name="carts" batch-size="100" cascade="delete-orphan"
      inverse="true">
      <key column="user_id" />
      <one-to-many class="Cart" />
    </bag>
    <bag name="comments" batch-size="100" cascade="delete-orphan"
      inverse="true">
      <key column="user_id" />
      <one-to-many class="Comment" />
    </bag>
  </class>
</hibernate-mapping>
